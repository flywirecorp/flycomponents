{
  "name": "flycomponents",
  "version": "1.0.2",
  "description": "Flywire React components",
  "main": "./dist/flycomponents.js",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run lint && npm run test && npm run clean",
    "build": "cross-env NODE_ENV=production webpack",
    "test": "mocha --opts tests/helpers/mocha.opts",
    "test:watch": "mocha -w --opts tests/helpers/mocha.opts",
    "lint": "eslint --fix src",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/javierarques/flycomponents.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/javierarques/flycomponents/issues"
  },
  "homepage": "https://github.com/javierarques/flycomponents#readme",
  "dependencies": {
    "accounting": "^0.4.1",
    "classnames": "^2.2.5",
    "dom-scroll-into-view": "^1.2.1",
    "moment": "^2.18.1",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-onclickoutside": "^5.11.1"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^3.5.0",
    "cross-env": "^4.0.0",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-prettier": "^2.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "ignore-styles": "^5.0.1",
    "mocha": "^3.3.0",
    "prettier": "^1.3.1",
    "react-addons-test-utils": "^15.5.1",
    "react-test-renderer": "^15.5.4",
    "sinon": "^2.2.0",
    "webpack": "^2.5.0"
  },
  "babel": {
    "moduleId": "flycomponents",
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "mocha": true,
      "node": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "promise",
      "react",
      "prettier"
    ],
    "rules": {
      "strict": 0,
      "react/sort-comp": "error",
      "react/sort-prop-types": "error",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": false
        }
      ]
    }
  }
}
